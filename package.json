  "bugs": {
    "url": "https://github.com/cjpalmerin/recipe-app/issues"
  },
  "homepage": "https://github.com/cjpalmerin/recipe-app#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "cors-anywhere": "^0.4.3",
    "express": "^4.18.2",
    "if-env": "^1.0.4"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  }
}
